        </script>
        <script> // Eliminar Proyecto
            document.getElementById("eliminar").addEventListener("click", function () {
                // Obtener el nombre del proyecto a eliminar del campo de selección
                const nombreProyecto = document.getElementById("nombre").value;
                let url = `/eliminarProyecto?nombreProyecto=${nombreProyecto}`;
                // Realizar la solicitud POST para eliminar el proyecto
                fetch(url)
                    .then(response => {
                        // Manejar la respuesta del servidor si es necesario
                        if (response.ok) {
                            console.log("Proyecto eliminado exitosamente");
                            // Otras acciones si es necesario
                        } else {
                            console.error("Error al eliminar el proyecto");
                            // Otras acciones si es necesario
                        }
                    })
                    .catch(error => {
                        console.error("Error en la solicitud POST:", error);
                        // Manejar el error si es necesario
                    });
            });
        </script>
        <script> // Cargar proyecto
            document.getElementById("cargar").addEventListener("click", function () {
                // Obtener el nombre del proyecto seleccionado del campo de selección
                const nombreProyecto = document.getElementById("nombre").value;

                // Realizar la solicitud GET al servidor para obtener los datos del proyecto seleccionado
                fetch(`/obtenerProyecto?nombreProyecto=${encodeURIComponent(nombreProyecto)}`)
                    .then(response => response.json())
                    .then(data => {
                        // Actualizar los campos en el formulario con los datos recibidos del servidor
                        document.getElementById("latitud").value = data.latitud;
                        document.getElementById("longitud").value = data.longitud;
                        document.getElementById("tipoSistema").value = data.sistema;
                        document.getElementById("modInv").value = data.inversor;
                        document.getElementById("modPanel").value = data.panel;
                        document.getElementById("modBat").value = data.bateria;
                        document.getElementById("modGen").value = data.genset;
                    })
                    .catch(error => {
                        console.error("Error en la solicitud GET:", error);
                        // Manejar el error si es necesario
                    });
            });
        </script>
        <script> // Cargar datos de Irradiacion solar por API a PVGIS
            // Este script cargará los datos de la tabla utilizando una petición AJAX
            // y los insertará en la tabla dentro del elemento <tbody>.
            document.getElementById("pvgis").addEventListener("click", function () {
                const tablaDatos = document.getElementById('tablaDatos');
                const loadingMessage = document.getElementById('loadingMessage'); // Nuevo elemento para el mensaje de carga
                const lat = document.getElementById('latitud').value;
                const long = document.getElementById('longitud').value;
                const url = `/obtenerRadiacion?latitud=${lat}&longitud=${long}`;

                // Mostrar el mensaje de carga
                loadingMessage.style.display = 'block';

                fetch(url)
                    .then(response => response.json()) // Parsear la respuesta como objeto JSON
                    .then(data => {
                        const dataArray = data.hourly; // Obtener la matriz de registros desde "hourly"

                        // Crear la tabla y el cuerpo de la tabla
                        const table = document.createElement('table');
                        const tableBody = document.createElement('tbody');
                        // Crear la fila de encabezado
                        const headerRow = document.createElement('tr');
                        const headers = ["Mes", "Irradiación total (W/m2)", "H_sun", "T2m (°C)", "WS10m (m/s)", "Generación (Wh)", "Almacenamiento (Wh)", "Consumo (Wh)", "Autoconsumo (Wh)", "Venta (Wh)", "Compra (Wh)"];
                        headers.forEach(headerText => {
                            const th = document.createElement('th');
                            th.textContent = headerText;
                            headerRow.appendChild(th);
                        });
                        tableBody.appendChild(headerRow);

                        // Recorrer los registros y crear las filas de la tabla
                        dataArray.forEach(registro => {
                            const row = document.createElement('tr');
                            const { time, 'Gb(i)': Gb, 'Gd(i)': Gd, 'Gr(i)': Gr, H_sun, Int, T2m, WS10m } = registro;
                            const [fecha, hora] = time.split(':');
                            const [anio, mes, dia] = [fecha.slice(0, 4), fecha.slice(4, 6), fecha.slice(6, 8)];
                            const suma = Gb + Gd + Gr; // Calcular la suma
                            const sumaFormatted = Number(suma.toPrecision(4)); // Redondear a 4 cifras significativas
                            const rowData = [mes, sumaFormatted, H_sun, T2m, WS10m, 0, 0, 0, 0, 0, 0];
                            rowData.forEach(cellData => {
                                const cell = document.createElement('td');
                                cell.textContent = cellData;
                                row.appendChild(cell);
                            });
                            tableBody.appendChild(row);
                        });

                        table.appendChild(tableBody);
                        tablaDatos.innerHTML = '';
                        tablaDatos.appendChild(table);

                        // Ocultar el mensaje de carga una vez que se complete la tabla
                        loadingMessage.style.display = 'none';

                    })
                    .catch(error => {
                        console.error('Error al obtener los datos:', error);
                        // Asegúrate de ocultar el mensaje de carga incluso si ocurre un error
                        loadingMessage.style.display = 'none';
                    });
            });
        </script>


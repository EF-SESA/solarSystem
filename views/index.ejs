            const formulario = document.getElementById('proyecto');
            let cond;
            function redirigirASitio() {
                    // Redirige al usuario a la ruta '/sitio' en el servidor
                    window.location.href = '/sitio';
                };
            function eliminarProyecto() {
                    // Redirige al usuario a la ruta '/sitio' en el servidor
                    window.location.href = '/eliminarProyecto';
                };
            btnNuevo.addEventListener('click', redirigirASitio);
            btnEliminar.addEventListener('click', eliminarProyecto);
            btnCargar.addEventListener('click', () => {
